<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Modscleo4.WPFUI.Controls">

    <Style x:Key="MenuBarItemStyle" TargetType="{x:Type controls:MenuBarItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:MenuBarItem}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">

                        <controls:TitlebarButton Content="{TemplateBinding Text}">
                            <controls:TitlebarButton.Style>
                                <Style TargetType="controls:TitlebarButton">
                                    <Setter Property="BorderThickness" Value="0" />
                                </Style>
                            </controls:TitlebarButton.Style>
                        </controls:TitlebarButton>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
